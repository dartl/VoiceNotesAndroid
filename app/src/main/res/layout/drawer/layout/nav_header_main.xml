<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorPrimary"
    android:gravity="top"
    android:orientation="horizontal"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:weightSum="12">

    <ImageView
        android:id="@+id/imageViewLevelIcon"
        android:layout_width="90dp"
        android:layout_height="@dimen/nav_header_avatar"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        app:srcCompat="@drawable/level1_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="11"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewLevelRank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/GawkMaterialTheme.DrawerHeadText1"
            android:gravity="bottom"
            android:layout_weight="1"
            android:text="@string/statistics_level1" />

        <TextView
            android:id="@+id/textViewLevelLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/GawkMaterialTheme.DrawerHeadText2"
            android:gravity="center"
            android:layout_weight="1"
            android:text="TextView" />

        <TextView
            android:id="@+id/textViewLevelExperience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/GawkMaterialTheme.DrawerHeadText3"
            android:gravity="top"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>
</LinearLayout>
