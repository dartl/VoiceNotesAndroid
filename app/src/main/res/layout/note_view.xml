<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/GawkMaterialTheme.BodyPaddingBottom">

    <EditText
        android:id="@+id/editTextNoteText"
        style="@style/GawkMaterialTheme.MultiTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:gravity="start"
        android:inputType="textMultiLine" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDate"
        android:gravity="end"
        android:layout_marginRight="@dimen/body_padding"
        style="@style/GawkMaterialTheme.CardViewNoteDate"
        android:layout_below="@+id/editTextNoteText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/body_padding"
        app:srcCompat="@drawable/ic_event_black_24dp"
        android:layout_alignTop="@+id/textViewBodyNotification"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewBodyNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/note_view_remind_no_body"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

</RelativeLayout>