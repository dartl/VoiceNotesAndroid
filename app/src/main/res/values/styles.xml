<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="GawkMaterialTheme" parent="GawkMaterialTheme.Base"></style>

    <style name="GawkMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="primaryColor">@color/tealColor300</item>
        <item name="primaryColor500">@color/tealColor500</item>
        <item name="primaryColorDark">@color/tealColor900</item>
        <item name="colorSelectListItem">#EDFAEF</item>
        <item name="accentColor">@color/tealColorA700</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">?primaryColor</item>
        <item name="colorPrimaryDark">?primaryColorDark</item>
        <item name="colorAccent">?accentColor</item>
        <item name="tabIndicatorColor">@color/colorWhite</item>
        <item name="tabIndicatorHeight">2dp</item>

        <item name="drawableDefaultButtonSelector">@drawable/default_button_selector</item>
    </style>

    <style name="GawkMaterialTheme.BaseDeepPurple" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="primaryColor">@color/deepPurpleColor300</item>
        <item name="primaryColor500">@color/deepPurpleColor500</item>
        <item name="primaryColorDark">@color/deepPurpleColor900</item>
        <item name="colorSelectListItem">@color/deepPurpleColor50</item>
        <item name="accentColor">@color/deepPurpleColorA700</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">?primaryColor</item>
        <item name="colorPrimaryDark">?primaryColorDark</item>
        <item name="colorAccent">?accentColor</item>
        <item name="tabIndicatorColor">@color/colorWhite</item>
        <item name="tabIndicatorHeight">2dp</item>
    </style>

    <style name="GawkMaterialTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="GawkMaterialTheme.DefaultButton">
        <item name="android:textColor">?primaryColor500</item>
        <item name="android:background">@drawable/selector_button_white</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="GawkMaterialTheme.PrimaryButton">
        <item name="android:background">?drawableDefaultSelector</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="GawkMaterialTheme.DefaultButtonNoBackground">
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?primaryColor500</item>
    </style>

    <!-- Главное окно -->
    <style name="GawkMaterialTheme.TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorWhite</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/GawkMaterialTheme.TabTextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="GawkMaterialTheme.TabTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="GawkMaterialTheme.IconNoBackground">
        <item name="android:background">@color/colorTransparent</item>
    </style>

    <style name="GawkMaterialTheme.ListGrouping">
        <item name="android:layout_marginTop">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#5F5F5F</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GawkMaterialTheme.ListNoteElement">
        <item name="android:paddingLeft">@dimen/element_padding</item>
        <item name="android:paddingRight">@dimen/element_padding</item>
        <item name="android:minHeight">80dp</item>
    </style>

    <style name="GawkMaterialTheme.ListNoteElementTextAndDate">
        <item name="android:paddingLeft">@dimen/element_padding</item>
    </style>

    <style name="GawkMaterialTheme.ListNoteElementIconNote" parent="GawkMaterialTheme.IconNoBackground">
        <item name="android:padding">8dp</item>
        <item name="android:tint">?primaryColor500</item>
    </style>

    <style name="GawkMaterialTheme.ListNoteElementDate">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#878787</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="GawkMaterialTheme.ListNoteElementText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#5F5F5F</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="GawkMaterialTheme.ListNoteActions">
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
        <item name="android:minHeight">64dp</item>
    </style>

    <style name="GawkMaterialTheme.ListNoteActionsIcons" parent="GawkMaterialTheme.IconNoBackground">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_height">@dimen/actions_icon_size</item>
        <item name="android:layout_width">@dimen/actions_icon_size</item>
        <item name="android:padding">@dimen/actions_icon_padding</item>
        <item name="android:tint">@color/colorGrey600</item>
    </style>

    <style name="GawkMaterialTheme.ListNoteActionsTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorGrey600</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="GawkMaterialTheme.ListNotificationIconsState" parent="GawkMaterialTheme.IconNoBackground">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:tint">?primaryColor500</item>
    </style>

    <!-- Окно статистики -->
    <style name="GawkMaterialTheme.Statistics">
        <item name="android:paddingTop">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="GawkMaterialTheme.StatisticsAvatar">
        <item name="android:layout_height">@dimen/statistics_avatar_size</item>
        <item name="android:layout_width">@dimen/statistics_avatar_size</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="GawkMaterialTheme.StatisticsHead">
        <item name="android:drawableBottom">@drawable/statistics_head_bottom_border</item>
    </style>

    <style name="GawkMaterialTheme.StatisticsHeadText1">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?primaryColor500</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="GawkMaterialTheme.StatisticsHeadText2">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorGrey500</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="GawkMaterialTheme.StatisticsHeadText3">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorGrey500</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="GawkMaterialTheme.StatisticsItem">
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="GawkMaterialTheme.StatisticsItemTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorGrey600</item>
    </style>

    <style name="GawkMaterialTheme.StatisticsItemCounter">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?primaryColor500</item>
        <item name="android:gravity">end</item>
    </style>

    <!-- Окно новой заметки -->
    <style name="GawkMaterialTheme.NewNoteSave" parent="GawkMaterialTheme.PrimaryButton">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="GawkMaterialTheme.NewNoteText">
        <item name="android:textColor">@color/colorGrey500</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="GawkMaterialTheme.NewNoteTextIcon">
        <item name="android:tint">?primaryColor500</item>
        <item name="android:layout_marginBottom">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="GawkMaterialTheme.NewNoteNotificationSwitcherTop">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorGrey600</item>
        <item name="android:paddingTop">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="GawkMaterialTheme.NewNoteNotificationSwitcher">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorGrey500</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="GawkMaterialTheme.NewNoteNotificationDateAndTime">
    </style>

    <style name="GawkMaterialTheme.NewNoteNotificationDate">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorGrey500</item>
    </style>

    <style name="GawkMaterialTheme.NewNoteNotificationHead">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorGrey500</item>
    </style>

    <style name="GawkMaterialTheme.NewNoteNotificationIcon">
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="GawkMaterialTheme.NewNoteNotificationSwitchText">
        <item name="android:textColor">@color/colorGrey500</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="GawkMaterialTheme.ButtonChangeTime" parent="GawkMaterialTheme.DefaultButton">
        <item name="android:textColor">?primaryColor500</item>
        <item name="android:drawableStart">@drawable/alarm_colored</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Drawer -->
    <style name="GawkMaterialTheme.DrawerHeadText1">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GawkMaterialTheme.DrawerHeadText2">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="GawkMaterialTheme.DrawerHeadText3">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="GawkMaterialTheme.DrawerSocial">
        <item name="android:paddingTop">16dp</item>
        <item name="android:background">@color/colorGrey50</item>
    </style>

    <style name="GawkMaterialTheme.DrawerSocialTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorGrey500</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- Окно просмотра заметки -->
    <style name="GawkMaterialTheme.NoteViewRemindersTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorGrey500</item>
    </style>

    <style name="GawkMaterialTheme.NoteViewDate">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorGrey500</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="GawkMaterialTheme.NoteViewEditeText">
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>

    <!-- Окно Экспорта/Импорта -->
    <style name="GawkMaterialTheme.ExportImportTitle">
        <item name="android:background">@drawable/plate_titile</item>
        <item name="android:textColor">@color/colorGrey600</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:paddingTop">24dp</item>
    </style>

    <style name="GawkMaterialTheme.ExportImportFileSelect">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorGrey400</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="GawkMaterialTheme.ExportImportTitleSub">
        <item name="android:layout_marginTop">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/colorGrey600</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="GawkMaterialTheme.ExportImportText">
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/colorGrey500</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Окно Настроек -->
    <style name="GawkMaterialTheme.SettingsTitle">
        <item name="android:textColor">?primaryColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="GawkMaterialTheme.SettingsButton" parent="GawkMaterialTheme.DefaultButtonNoBackground">
        <item name="android:textColor">@color/colorGrey800</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:gravity">left|bottom</item>
    </style>

    <style name="GawkMaterialTheme.SettingsHelp">
        <item name="android:textColor">@color/colorGrey500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>

    <!-- Окно распознователя речи -->
    <style name="GawkMaterialTheme.SpeechRecognitionTitle">
        <item name="android:textColor">@color/colorGrey600</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="GawkMaterialTheme.SpeechRecognitionTextError">
        <item name="android:textColor">@color/colorGrey600</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
