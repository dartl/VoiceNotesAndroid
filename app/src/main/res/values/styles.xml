<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="GawkMaterialTheme" parent="GawkMaterialTheme.Base"></style>

    <style name="GawkMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="tabIndicatorColor">@color/colorWhite</item>
        <item name="tabIndicatorHeight">2dp</item>
    </style>

    <style name="GawkMaterialTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Главное окно -->
    <style name="GawkMaterialTheme.TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorWhite</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/GawkMaterialTheme.TabTextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="GawkMaterialTheme.TabTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="GawkMaterialTheme.IconNoBackground">
        <item name="android:background">@color/colorTransparent</item>
    </style>

    <style name="GawkMaterialTheme.ListNoteElement">
        <item name="android:paddingLeft">@dimen/element_padding</item>
        <item name="android:paddingRight">@dimen/element_padding</item>
        <item name="android:minHeight">80dp</item>
    </style>

    <style name="GawkMaterialTheme.ListNoteElementTextAndDate">
        <item name="android:paddingLeft">@dimen/element_padding</item>
    </style>

    <style name="GawkMaterialTheme.ListNoteElementIconNote" parent="GawkMaterialTheme.IconNoBackground">
        <item name="android:padding">8dp</item>
    </style>

    <style name="GawkMaterialTheme.ListNoteElementDate">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#878787</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="GawkMaterialTheme.ListNoteElementText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#5F5F5F</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="GawkMaterialTheme.ListNoteActions">
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
        <item name="android:minHeight">64dp</item>
    </style>

    <style name="GawkMaterialTheme.ListNoteActionsIcons" parent="GawkMaterialTheme.IconNoBackground">
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="GawkMaterialTheme.ListNoteActionsTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorGrey600</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="GawkMaterialTheme.ListNotificationIconsState" parent="GawkMaterialTheme.IconNoBackground">
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <!-- Окно статистики -->
    <style name="GawkMaterialTheme.Statistics">
        <item name="android:paddingTop">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="GawkMaterialTheme.StatisticsAvatar">
        <item name="android:layout_height">@dimen/statistics_avatar_size</item>
        <item name="android:layout_width">@dimen/statistics_avatar_size</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="GawkMaterialTheme.StatisticsHead">
        <item name="android:drawableBottom">@drawable/statistics_head_bottom_border</item>
    </style>

    <style name="GawkMaterialTheme.StatisticsHeadText1">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary500</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="GawkMaterialTheme.StatisticsHeadText2">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorGrey500</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="GawkMaterialTheme.StatisticsHeadText3">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorGrey500</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="GawkMaterialTheme.StatisticsItem">
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="GawkMaterialTheme.StatisticsItemTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorGrey600</item>
    </style>

    <style name="GawkMaterialTheme.StatisticsItemCounter">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary500</item>
        <item name="android:gravity">end</item>
    </style>


    <!-- Drawer -->
    <style name="GawkMaterialTheme.DrawerHeadText1">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GawkMaterialTheme.DrawerHeadText2">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="GawkMaterialTheme.DrawerHeadText3">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="GawkMaterialTheme.DrawerSocial">
        <item name="android:paddingTop">16dp</item>
        <item name="android:background">@color/colorGrey50</item>
    </style>

    <style name="GawkMaterialTheme.DrawerSocialTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorGrey500</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

</resources>
