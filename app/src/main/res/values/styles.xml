<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="GawkMaterialTheme" parent="GawkMaterialTheme.Base"></style>

    <style name="GawkMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GawkMaterialTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="GawkMaterialTheme.ButtonActionImage" parent="Widget.AppCompat.Light.ActionButton">
    </style>

    <style name="GawkMaterialTheme.Body" >
        <item name="android:padding">@dimen/body_padding</item>
    </style>

    <style name="GawkMaterialTheme.ButtonBig" parent="Widget.AppCompat.ImageButton">
        <item name="background">@color/colorPrimaryDark</item>
        <item name="android:paddingLeft">@dimen/big_button_icon_padding</item>
        <item name="android:paddingRight">@dimen/big_button_icon_padding</item>
        <item name="android:paddingTop">@dimen/big_button_icon_padding_top</item>
        <item name="android:paddingBottom">@dimen/big_button_icon_padding_top</item>
        <item name="android:layout_marginLeft">@dimen/big_button_icon_margin</item>
        <item name="android:layout_marginRight">@dimen/big_button_icon_margin</item>
        <item name="android:height">@dimen/big_button_icon_height</item>
    </style>

    <style name="GawkMaterialTheme.MultiTextField">
        <item name="android:padding">@dimen/multi_text_full_padding</item>
        <item name="android:textSize">@dimen/multi_text_full_text_size</item>
    </style>

    <style name="GawkMaterialTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="GawkMaterialTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="GawkMaterialTheme.FullDialogTitle" >
        <item name="android:padding">@dimen/full_width_app_height</item>
    </style>

    <style name="GawkMaterialTheme.ErrorBody" >
        <item name="android:textColor">@color/colorError</item>
    </style>

</resources>
