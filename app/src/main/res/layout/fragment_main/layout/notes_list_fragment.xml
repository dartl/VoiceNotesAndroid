<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/windowBackground"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/listViewAllNotes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/relativeLayoutBottomMenu"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        app:fabSize="normal"
        android:src="@drawable/ic_note_add_white_36dp"
        android:layout_above="@+id/relativeLayoutBottomMenu"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:id="@+id/relativeLayoutBottomMenu"
        style="@style/GawkMaterialTheme.ListNoteActions"
        android:translationY="64dp"
        android:layout_height="0dp"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageButton
            android:id="@+id/imageButtonShare"
            style="@style/GawkMaterialTheme.ListNoteActionsIcons"
            android:layout_height="@dimen/actions_icon_size"
            android:layout_width="@dimen/actions_icon_size"
            android:padding="@dimen/actions_icon_padding"
            android:src="@drawable/ic_share_grey_24dp"
            android:tint="@color/colorGrey800"
            android:layout_alignParentTop="true"
            android:layout_gravity="end"
            android:layout_toLeftOf="@+id/imageButtonDelete"
            android:layout_toStartOf="@+id/imageButtonDelete"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/imageButtonDelete"
            style="@style/GawkMaterialTheme.ListNoteActionsIcons"
            android:layout_height="@dimen/actions_icon_size"
            android:layout_width="@dimen/actions_icon_size"
            android:padding="@dimen/actions_icon_padding"
            android:src="@drawable/ic_delete_grey_24dp"
            android:tint="@color/colorGrey800"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="end"
            android:scaleType="fitCenter"/>
    </RelativeLayout>
</RelativeLayout>