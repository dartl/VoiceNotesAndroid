<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/GawkMaterialTheme.NewNoteText"
        android:inputType="textMultiLine"
        android:gravity="start"
        android:hint="@string/new_note_text"
        android:id="@+id/editText_NewNoteText"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/spinnerSelectCategory"
        android:layout_above="@+id/imageButton_NewNoteAdd" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/imageButton_NewNoteAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:src="@drawable/ic_mic_black_24dp"
        app:backgroundTint="@color/colorWhite"
        style="@style/GawkMaterialTheme.NewNoteTextIcon"
        android:layout_alignTop="@+id/imageButton_NewNoteClear"
        android:layout_alignRight="@+id/editText_NewNoteText"
        android:layout_alignEnd="@+id/editText_NewNoteText" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/imageButton_NewNoteClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        app:backgroundTint="@color/colorWhite"
        android:src="@drawable/ic_clear_black_24dp"
        style="@style/GawkMaterialTheme.NewNoteTextIcon"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/editText_NewNoteText"
        android:layout_alignStart="@+id/editText_NewNoteText"
        android:layout_marginBottom="14dp" />

    <Spinner
        android:id="@+id/spinnerSelectCategory"
        style="@style/GawkMaterialTheme.SpinnerSelectCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>