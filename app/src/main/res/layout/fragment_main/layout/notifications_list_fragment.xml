<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/listViewAllNotifications"
        android:background="@color/windowBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:id="@+id/relativeLayoutBottomMenu"
        style="@style/GawkMaterialTheme.ListNoteActions"
        android:translationY="64dp"
        android:layout_height="0dp"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/textViewNoteSelectCount"
            style="@style/GawkMaterialTheme.ListNoteActionsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:text="@string/main_selected_element" />

        <ImageButton
            android:id="@+id/imageButtonDelete"
            style="@style/GawkMaterialTheme.ListNoteActionsIcons"
            android:layout_height="@dimen/actions_icon_size"
            android:layout_width="@dimen/actions_icon_size"
            android:padding="@dimen/actions_icon_padding"
            android:src="@drawable/ic_delete_grey_24dp"
            android:tint="@color/colorGrey600"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"/>
    </RelativeLayout>
</RelativeLayout>