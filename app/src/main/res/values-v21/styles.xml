<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GawkMaterialTheme" parent="GawkMaterialTheme.Base">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="GawkMaterialTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="GawkMaterialTheme.Body" >
        <item name="android:padding">@dimen/body_padding</item>
    </style>

    <style name="GawkMaterialTheme.ButtonBig" parent="Widget.AppCompat.Button.Colored">
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:paddingLeft">@dimen/big_button_icon_padding</item>
        <item name="android:paddingRight">@dimen/big_button_icon_padding</item>
        <item name="android:paddingTop">@dimen/big_button_icon_padding_top</item>
        <item name="android:paddingBottom">@dimen/big_button_icon_padding_top</item>
        <item name="android:layout_marginLeft">@dimen/big_button_icon_margin</item>
        <item name="android:layout_marginRight">@dimen/big_button_icon_margin</item>
        <item name="android:minHeight">@dimen/big_button_icon_height</item>
    </style>

    <style name="GawkMaterialTheme.MultiTextField" parent="Widget.AppCompat.EditText" />
</resources>