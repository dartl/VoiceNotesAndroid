<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayoutBottomMenu"
    style="@style/GawkMaterialTheme.ListNoteActions"
    android:translationY="64dp"
    android:layout_height="0dp"
    android:layout_width="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:visibility="visible">

    <TextView
        android:id="@+id/textViewNoteSelectCount"
        style="@style/GawkMaterialTheme.ListNoteActionsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:text="@string/main_selected_element" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imageButtonShare"
        style="@style/GawkMaterialTheme.ListNoteActionsIcons"
        app:srcCompat="@drawable/ic_share_black_36dp"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_toLeftOf="@+id/imageButtonDelete"
        android:layout_toStartOf="@+id/imageButtonDelete"
        android:scaleType="fitCenter"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imageButtonDelete"
        style="@style/GawkMaterialTheme.ListNoteActionsIcons"
        app:srcCompat="@drawable/ic_delete_black_36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"/>
</RelativeLayout>